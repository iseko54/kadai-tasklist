<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class ="table table-striped">
    <thred>
      <tr>id</tr>
      <tr>ステータス</tr>
      <tr>タスク</tr>
    </thred>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %>
        <td><%= task.status %><td>
        <td><%= task.content %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
